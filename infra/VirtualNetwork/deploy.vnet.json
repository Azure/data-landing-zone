{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the vnet that gets created."
            }
        }
    },
    "functions": [],
    "variables": {
        "location": "[parameters('location')]",
        "vnetName": "[parameters('vnetName')]"
    },
    "resources": [
        {
            "name": "datanode-nsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-11-01",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                ]
            }
        },
        {
            "name": "[variables('vnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', 'datanode-nsg')]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.1.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "type": "subnets",
                        "apiVersion": "2020-05-01",
                        "name": "datanode-storage-subnet",
                        "location": "[variables('location')]",
                        "dependsOn": [
                            "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
                        ],
                        "properties": {
                            "addressPrefix": "10.1.0.0/27",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    },
                    {
                        "type": "subnets",
                        "apiVersion": "2020-05-01",
                        "name": "dataproduct001-subnet",
                        "location": "[variables('location')]",
                        "dependsOn": [
                            "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
                        ],
                        "properties": {
                            "addressPrefix": "10.1.1.0/27",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'datanode-nsg')]"
                            }
                        }
                    },
                    {
                        "type": "subnets",
                        "apiVersion": "2020-05-01",
                        "name": "dataproduct001-private-subnet",
                        "location": "[variables('location')]",
                        "dependsOn": [
                            "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
                        ],
                        "properties": {
                            "addressPrefix": "10.1.2.0/27",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    }
                ]
            }
        }
    ]
}