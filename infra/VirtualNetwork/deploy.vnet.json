{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the vnet that gets created."
            }
        },
        "dataNodeNumber": {
            "type": "string",
            "defaultValue": "1",
            "metadata": {
                "description": "Specifies the number of the data node."
            }
        },
        "dataNodeName": {
            "type": "string",
            "defaultValue": "dn001",
            "metadata": {
                "description": "Specifies the name of the data node."
            }
        },
        "deployDatabricksNsg": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Specifies whether the databricks NSG should be deployed."
            }
        },
        "dnsServerAdresses": {
            "type": "array",
            "metadata": {
                "description": "Specifies the addresses of DNS forwarders in the hub."
            }
        },
        "firewallPrivateIp": {
            "type": "string",
            "metadata": {
                "description": "Specifies the private IP of the Firewall."
            }
        },
        "tags": {
            "type": "object",
            "defaultValue": {},
            "metadata": {
                "description": "Specifies tags which should be added to all resources."
            }
        }
    },
    "functions": [],
    "variables": {
        "location": "[parameters('location')]",
        "vnetName": "[parameters('vnetName')]",
        "dataNodeNumber": "[parameters('dataNodeNumber')]",
        "dataNodeName": "[parameters('dataNodeName')]",
        "deployDatabricksNsg": "[parameters('deployDatabricksNsg')]",
        "dnsServerAdresses": "[parameters('dnsServerAdresses')]",
        "firewallPrivateIp": "[parameters('firewallPrivateIp')]",
        "tags": "[parameters('tags')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2020-05-01",
            "name": "[concat(variables('dataNodeName'), '-routetable')]",
            "tags": "[variables('tags')]",
            "location": "[variables('location')]",
            "properties": {
                "routes": [
                    {
                        "name": "to-firewall-default",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[variables('firewallPrivateIp')]"
                        }
                    }
                ],
                "disableBgpRoutePropagation": false
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[concat(variables('dataNodeName'), '-nsg')]",
            "tags": "[variables('tags')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                    // {
                    //     "name": "DenyInternetInbound",
                    //     "properties": {
                    //         "description": "Deny Internet Inbound",
                    //         "protocol": "*",
                    //         "sourcePortRange": "*",
                    //         "destinationPortRange": "*",
                    //         "sourceAddressPrefix": "Internet",
                    //         "destinationAddressPrefix": "*",
                    //         "access": "Deny",
                    //         "priority": 4000,
                    //         "direction": "Inbound",
                    //         "sourcePortRanges": [],
                    //         "destinationPortRanges": [],
                    //         "sourceAddressPrefixes": [],
                    //         "destinationAddressPrefixes": []
                    //     }
                    // }
                ]
            }
        },
        {
            "condition": "[variables('deployDatabricksNsg')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[concat(variables('dataNodeName'), '-databricks-nsg')]",
            "tags": "[variables('tags')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Microsoft.Databricks-workspaces_UseOnly_databricks-worker-to-worker-inbound",
                        "properties": {
                            "description": "Required for worker nodes communication within a cluster.",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "Microsoft.Databricks-workspaces_UseOnly_databricks-worker-to-worker-outbound",
                        "properties": {
                            "description": "Required for worker nodes communication within a cluster.",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 101,
                            "direction": "Outbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "Microsoft.Databricks-workspaces_UseOnly_databricks-worker-to-sql",
                        "properties": {
                            "description": "Required for workers communication with Azure SQL services.",
                            "protocol": "tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3306",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "Sql",
                            "access": "Allow",
                            "priority": 102,
                            "direction": "Outbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "Microsoft.Databricks-workspaces_UseOnly_databricks-worker-to-storage",
                        "properties": {
                            "description": "Required for workers communication with Azure Storage services.",
                            "protocol": "tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "Storage",
                            "access": "Allow",
                            "priority": 103,
                            "direction": "Outbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "Microsoft.Databricks-workspaces_UseOnly_databricks-worker-to-eventhub",
                        "properties": {
                            "description": "Required for worker communication with Azure Eventhub services.",
                            "protocol": "tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "9093",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "EventHub",
                            "access": "Allow",
                            "priority": 104,
                            "direction": "Outbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    },
                    {
                        "name": "Microsoft.Databricks-workspaces_UseOnly_databricks-worker-to-databricks-webapp",
                        "properties": {
                            "description": "Required for workers communication with Databricks Webapp.",
                            "protocol": "tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "AzureDatabricks",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Outbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "name": "[variables('vnetName')]",
            "tags": "[variables('tags')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-databricks-nsg'))]",
                "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[concat('10.', variables('dataNodeNumber'), '.0.0/16')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": "[if(empty(variables('dnsServerAdresses')), '[]', variables('dnsServerAdresses'))]"
                },
                "subnets": [
                    {
                        "name": "[concat(variables('dataNodeName'), '-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.0.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-privatelink-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.1.0/24')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-databricks001-public-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.2.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-databricks-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            },
                            "delegations": [
                                {
                                    "name": "databricks-delegation-public",
                                    "properties": {
                                        "serviceName": "Microsoft.Databricks/workspaces"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-databricks001-private-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.3.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-databricks-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            },
                            "delegations": [
                                {
                                    "name": "databricks-delegation-private",
                                    "properties": {
                                        "serviceName": "Microsoft.Databricks/workspaces"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-databricks002-public-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.4.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-databricks-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            },
                            "delegations": [
                                {
                                    "name": "databricks-delegation-public",
                                    "properties": {
                                        "serviceName": "Microsoft.Databricks/workspaces"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-databricks002-private-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.5.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-databricks-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            },
                            "delegations": [
                                {
                                    "name": "databricks-delegation-private",
                                    "properties": {
                                        "serviceName": "Microsoft.Databricks/workspaces"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-pbi-gateway-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.6.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            },
                            "delegations": [
                                {
                                    "name": "powerbigateway",
                                    "properties": {
                                        "serviceName": "Microsoft.PowerPlatform/vnetaccesslinks"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-dd001-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.7.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-dd001-privatelink-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.8.0/24')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-dd002-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.9.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-dd002-privatelink-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.10.0/24')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-dp001-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.11.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Disabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-dp001-privatelink-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.12.0/24')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-dp002-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.13.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(variables('dataNodeName'), '-dp002-privatelink-subnet')]",
                        "properties": {
                            "addressPrefix": "[concat('10.', variables('dataNodeNumber'), '.14.0/24')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(variables('dataNodeName'), '-nsg'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(variables('dataNodeName'), '-routetable'))]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "vnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
        },
        "subnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), concat(variables('dataNodeName'), '-subnet'))]"
        },
        "privateLinkSubnetId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), concat(variables('dataNodeName'), '-privatelink-subnet'))]"
        },
        "databricksPublicSubnetName001": {
            "type": "string",
            "value": "[concat(variables('dataNodeName'), '-databricks001-public-subnet')]"
        },
        "databricksPrivateSubnetName001": {
            "type": "string",
            "value": "[concat(variables('dataNodeName'), '-databricks001-private-subnet')]"
        },
        "databricksPublicSubnetName002": {
            "type": "string",
            "value": "[concat(variables('dataNodeName'), '-databricks002-public-subnet')]"
        },
        "databricksPrivateSubnetName002": {
            "type": "string",
            "value": "[concat(variables('dataNodeName'), '-databricks002-private-subnet')]"
        }
    }
}