{
    "dbus_per_hour": {
        "type": "range",
        "maxValue": 100
    },
    "cluster_type": {
        "type": "fixed",
        "value": "job"
    },
    "spark_conf.spark.databricks.delta.preview.enabled": {
        "type": "fixed",
        "value": "true"
    },
    "instance_pool_id": {
        "type": "forbidden",
        "hidden": true
    },
    "spark_version": {
        "type": "regex",
        "pattern": "[67].[0-9].*",
        "hidden": false
    },
    "node_type_id": {
        "type": "allowlist",
        "values": [
            "Standard_DS3_v2",
            "Standard_DS4_v2",
            "Standard_DS5_v2"
        ],
        "defaultValue": "Standard_DS3_v2",
        "hidden": false
    },
    "driver_node_type_id": {
        "type": "allowlist",
        "values": [
            "Standard_DS3_v2",
            "Standard_DS4_v2",
            "Standard_DS5_v2"
        ],
        "defaultValue": "Standard_DS3_v2",
        "hidden": false
    },
    "autoscale.min_workers": {
        "type": "fixed",
        "value": 1,
        "hidden": true
    },
    "autoscale.max_workers": {
        "type": "range",
        "maxValue": 10,
        "defaultValue": 5,
        "hidden": false
    },
    "custom_tags.costCenter": {
        "type": "unlimited",
        "isOptional": false,
        "hidden": false
    },
    "ssh_public_keys.*": {
        "type": "forbidden",
        "hidden": true
    },
    "cluster_log_conf.type": {
        "type": "fixed",
        "value": "DBFS",
        "hidden": false
    },
    "cluster_log_conf.path": {
        "type": "fixed",
        "value": "dbfs://cluster-logs",
        "hidden": false
    },
    "spark_env_vars.LOG_ANALYTICS_WORKSPACE_ID": {
        "type": "fixed",
        "value": "{{secrets/adminSecretScopeNew/logAnalyticsWorkspaceId}}",
        "hidden": false
    },
    "spark_env_vars.LOG_ANALYTICS_WORKSPACE_KEY": {
        "type": "fixed",
        "value": "{{secrets/adminSecretScopeNew/logAnalyticsWorkspaceKey}}",
        "hidden": false
    },
    "spark_conf.spark.hadoop.javax.jdo.option.ConnectionUserName": {
        "type": "fixed",
        "value": "{{secrets/adminSecretScopeNew/hiveMetastoreConnectionUserName}}",
        "hidden": false
    },
    "spark_conf.spark.hadoop.javax.jdo.option.ConnectionPassword": {
        "type": "fixed",
        "value": "{{secrets/adminSecretScopeNew/hiveMetastoreConnectionPassword}}",
        "hidden": false
    },
    "spark_conf.spark.hadoop.javax.jdo.option.ConnectionURL": {
        "type": "fixed",
        "value": "{{secrets/adminSecretScopeNew/hiveMetastoreConnectionURL}}",
        "hidden": false
    },
    "spark_conf.spark.hadoop.javax.jdo.option.ConnectionDriverName": {
        "type": "fixed",
        "value": "org.mariadb.jdbc.Driver",
        "hidden": false
    },
    "spark_conf.spark.sql.hive.metastore.version": {
        "type": "fixed",
        "value": "0.0.0",
        "hidden": false
    },
    "spark_conf.spark.sql.hive.metastore.jars": {
        "type": "fixed",
        "value": "/databricks/hive_metastore_jars/*",
        "hidden": false
    },
    "spark_conf.spark.hadoop.hive.metastore.schema.verification": {
        "type": "fixed",
        "value": "false",
        "hidden": false
    },
    "spark_conf.spark.hadoop.datanucleus.schema.autoCreateAll": {
        "type": "fixed",
        "value": "true",
        "hidden": false
    }
}